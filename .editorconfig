root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,scss}]
indent_size = 2

[*.{html,php,twig,yml}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{composer.json}]
indent_size = 4

[{package.json}]
indent_size = 2